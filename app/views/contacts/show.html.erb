<h1><%= @contact.name %></h1>
<a href="<%= edit_contact_path %>">Edit</a>
<%= link_to "Delete", contact_path,
                  method: :delete,
                  data: { confirm: "Are you sure?" } %>

<ul>
  <li>Phone: <a href="tel:+<%= @contact.phone_number %>"><%= @contact.phone_number %></a></li>
  <% @contact.emails.each do |email| %>
    <li>Email: <a href="mailto:<%= email.address %>"><%= email.address %></a></li>
  <% end %>
  <li>Birthday: <%= @contact.birthday %></li>
  <li>Company: <%= @contact.company %></li>
</ul>
